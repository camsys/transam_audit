:ruby
  audits = Audit.active

- if audits.present?
  %li.divider

- audits.each do |audit|
  %li.text-left
    = link_to audit_results_path(:audit_filter => audit.id, :types_filter => audit.audit_results.first.class_name, :audit_result_type_filter => [AuditResultType::AUDIT_RESULT_FAILED]) do
      %i.fa.fa-line-chart.fa-fw
      = "#{audit.name} results"

%li.divider
%li.text-left
  = link_to audit_results_path do
    %i.fa.fa-line-chart.fa-fw
    = "All audit results"
